# PostgreSQL connection string.
# Replace USER and PASSWORD with your Postgres credentials.
# Ensure the database woo_huahua_db exists (e.g. createdb -U postgres woo_huahua_db).
DATABASE_URL="postgresql://USER:Mypassword@localhost:5432/woo_huahua_db"

# JWT signing secret (use a long random string in production).
JWT_SECRET="your-jwt-secret-change-in-production"

# Frontend URL (for password reset links and verification redirect). Use your frontend origin (e.g. http://localhost:8080).
FRONTEND_URL="http://localhost:8080"

# Backend URL (for verification link in emails). Use your API origin (e.g. http://localhost:3000 or https://api.yourdomain.com).
BACKEND_URL="http://localhost:3000"

# SMTP for sending verification emails. Without these, signup still works but the verification link is only shown on the "Check your email" page.
# Gmail: use App Password. Mailtrap/Ethereal for testing. SendGrid/Postmark: use their SMTP host.
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="Woo-Huahua Microchipping Database <noreply@yourdomain.com>"

# OpenAI API key for AI Chat. Get from https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"

# Twilio Voice (AI Call Centre). Get from https://console.twilio.com
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_API_KEY="SK..."
TWILIO_API_SECRET="..."
# TwiML App SID - create at https://console.twilio.com/us1/develop/voice/manage/twiml-apps
# Set Voice Request URL to: https://your-public-url/api/voice/webhook
TWILIO_TWIML_APP_SID="AP..."
# Your Twilio number (format: +44...) - configure it to use the TwiML App for incoming calls
TWILIO_PHONE_NUMBER="+44..."

# Admin account. Used by: npx prisma db seed
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="your-secure-admin-password"

# Authorised person (Reg 7) – dog wardens, vets: can log in and do microchip look-up only. Used by: npx prisma db seed
AUTHORISED_EMAIL="authorised@yourdomain.com"
AUTHORISED_PASSWORD="your-secure-password"

# Stripe (microchip registration: £24.99 per pet). Get keys from https://dashboard.stripe.com/apikeys
# Use TEST key for development (test cards work). Use LIVE key when you go to production.
# STRIPE_SECRET_KEY="sk_live_..."   # Production: uncomment and comment the line below
STRIPE_SECRET_KEY="sk_test_..."    # Development: paste your test secret key here
# Webhook signing secret from Stripe CLI or Dashboard → Developers → Webhooks (use raw body for verification)
STRIPE_WEBHOOK_SECRET="whsec_..."
# Price in pence (2499 = £24.99). Update annually (e.g. with inflation) without code changes.
STRIPE_REGISTRATION_PRICE_PENCE=2499
# Transfer-of-ownership fee in pence. Defaults to registration price if unset.
STRIPE_TRANSFER_FEE_PENCE=2499
